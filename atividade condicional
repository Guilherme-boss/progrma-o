13. Faça um programa que informe o mês de acordo com o número digitado pelo usuário.
Exemplo: Entrada = 4. Saída = Abril.
#include <iostream>
#include <stdlib.h>
#include <locale.h>
/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char** argv) {
	
	setlocale(LC_ALL,"Portuguese");
	
	int cm;
	
	printf("Digite um número: \n");
	scanf("%i", & cm);
	
	
	if(cm == 1){
		
		printf(" Janeiro \n");
		
	}
	
	if(cm == 2 ){
		
		printf(" Fevereiro \n");
		
	}
	if(cm == 3 ){
		
		printf(" Março \n");
		
	}
	if(cm == 4 ){
		
		printf(" Abril \n");
		
	}
	if(cm == 5){
		
		printf(" Maio \n");
		
	}
	if(cm == 6 ){
		
		printf(" Junho \n");
		
	}
	if(cm == 7 ){
		
		printf(" Julho \n");
		
	}
	if(cm ==8 ){
		
		printf(" Agosto\n");
		
	}
	if(cm == 9  ){
		
		printf(" Setembro \n");
		
	}
	if(cm == 10 ){
		
		printf(" Outubro\n");
		
	}
	if(cm == 11){
		
		printf(" Novembro\n");
		
	}
	if(cm == 12 ){
		
		printf(" Dezembro \n");
		
	}
		
	
	
	
	return 0;
}
