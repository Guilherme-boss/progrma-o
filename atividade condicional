//Faça um programa que leia dois números e mostre o maior deles. Se, por acaso, os dois
números forem iguais, imprima a mensagem “Números iguais”
#include <stdio.h>
#include <math.h>


int main(int argc, char *argv[]) {
	int n1,n2;
	printf("Digite o primeiro nuemero\n");
	scanf("%i",&n1);
	printf("digite o segundo numero\n");
	scanf("%i",&n2);
	
	if (n1>n2){
	printf("o maior numero eh:%i\n",n1);
	}
	else if(n2>n1){
	printf("o maio numero eh:%i\n",n2);
	}
	else if  (n1== n2){
	printf("numeros sao iguais ");
	}
	return 0;
}













